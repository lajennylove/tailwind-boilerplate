{
	"autoprefixerBrowsers": [
		"last 2 versions",
		"> 5%"
	],
	"gzip_options": {
		"threshold": "1kb",
		"gzipOptions": {
			"level": 9
		}
	},
	"tailwindjs": "./tailwind.config.js",
	"sourcePaths": {
		"root": "src/",
		"tailwind": "src/app.scss",
		"safelist": "src/scss/safelist.txt",
		"scss": "src/**/*.scss",
		"js": [
			"src/js/*.js"
		],
		"php": [
			"**/*.php"
		],
		"html": [
			"**/*.html"
		],
		"images": [
			"src/img/**/*.{jpg,jpeg,png,gif}"
		],
		"svg": [
			"src/img/**/*.svg"
		]
	},
	"watchFiles": {
		"style": "src/scss/*.css"
	},
	"deployPaths": {
		"root": "dist/",
		"scss": "dist/css",
		"js": "dist/js",
		"images": "dist/img",
		"svg": "dist/img/svg"
	},
	"deployFiles": {
		"scss": "app.css",
		"js": "app.js"
	},
	"cleanFiles": [
		"dist/css/",
		"dist/img/"
	],
	"cleanCSS": [
		"dist/css/"
	],
	"baseDir": "./dist",
	"port": 3008,
	"open": false,
	"notify": true
}